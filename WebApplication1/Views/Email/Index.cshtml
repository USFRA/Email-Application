@model IEnumerable<WebApplication1.Models.BroadcastingEmail>

@{
    ViewBag.Title = "Drafts";
}
<style>
    .popup {
        /*width: 200px;
        height: 100px;*/
        background-color: #ffffff;
        /*left: 300px;
        top: 200px;*/
        position: absolute;
        display: none;
        border: 1px solid #808080;
        max-height: 450px;
    }
</style>

@Scripts.Render("~/Scripts/jquery-3.1.1.min.js")
<script language="javascript" type="text/javascript">
    $(document).ready(function () {

        $(".clickHere").click(function (event) {
                if ($('.popup').is(":visible")) {
                    $('.popup').fadeOut(250);
                }
                else {
                    $('.popup').fadeIn(250);
                    var id = $(this).attr('data-id');
                    getContent(id);
                    //center popup
                    var top = document.documentElement.scrollTop;
                    var popupWidth = $('#divPopup').width();
                    var popupHeight = $('#divPopup').height();
                    $('#divPopup').css({
                        position: 'absolute',
                        top: $(window).height() / 2 - popupHeight / 2,
                        left: $(window).width() / 2 - popupWidth / 2,
                        display: 'block',
                        zIndex: 1000
                    });
                }
                event.stopPropagation();
            });

        $(document).click(function (event) {
            if ($('.popup').is(":visible"))
                $('.popup').fadeOut(250);
        });

        $("#popup-close-btn").click(function (event) {
            $('#divPopup').css({ display: 'none' })
            event.stopPropagation();
        });

    });


    function getContent(id) {
        var myURL = '@Session["AppURL"]';
        
        $.ajax({
            url: myURL + "/email/popup",
            method:"GET",
            data: {'id': id },
            beforeSend: function() {
            },
            success: function(data) {
                $('#divPopup').html(data);
            },
            error: function(error) {
                alert("Error in request.");
            }
        });
    }

</script>
